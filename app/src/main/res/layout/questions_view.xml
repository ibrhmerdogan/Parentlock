<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:divider="@color/white"
            android:dividerHeight="@dimen/pad_5dp"
            android:fastScrollEnabled="true"
            android:paddingBottom="@dimen/pad_10dp"
            android:paddingTop="@dimen/pad_10dp">

        </ListView>

        <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.37"
        android:layout_margin="@dimen/pad_5dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/pad_5dp"
        android:background="@color/colorPrimary"
        android:layout_weight="0.53"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/spinner"
        android:id="@+id/scrollView2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pad_15dp"
            android:background="@color/colorAccentt"
            android:orientation ="horizontal">

            <ImageView
                android:id="@+id/math"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/math"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/turkish"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="400dp"
                android:background="@drawable/turkhis"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </ScrollView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_weight="1.1"
            android:orientation="vertical"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/pad_5dp"
                    android:background="@color/white"
                    android:textColor="@color/colorAccentt"
                    android:text="Secilen:"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/pad_15dp"
                    android:textAlignment="center"
                    android:layout_margin="@dimen/pad_5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:text="Soru Sayısı:"
                    android:textSize="@dimen/pad_15dp"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:textColor="@color/colorAccentt"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/pad_5dp"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:layout_weight="1.333"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textColor="@color/colorAccentt"
                    android:textSize="@dimen/pad_10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:text="Ders:"
                    android:textSize="@dimen/pad_15dp"
                    android:layout_weight="0.975"
                    android:gravity="center"
                    android:textColor="@color/colorAccentt"
                    android:textAlignment="center"
                    android:layout_margin="@dimen/pad_5dp"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/common_google_signin_btn_text_dark_default"
                    android:gravity="center"
                    android:textColor="@color/colorAccentt"
                    android:textSize="@dimen/pad_10dp" />

                <Button
                    android:id="@+id/btnSend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:textColor="@color/colorAccentt"
                    android:text="Gönder"
                    android:textSize="@dimen/pad_15dp"
                    android:layout_weight="1.025"
                    android:layout_margin="@dimen/pad_5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>