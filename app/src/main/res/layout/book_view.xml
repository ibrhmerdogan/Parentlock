<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:layout_weight="1.3">
        <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorPrimary"
        android:text="  Sayfa sayisini seçiniz!"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:divider="@color/white"
        android:dividerHeight="@dimen/pad_5dp"
        android:fastScrollEnabled="true"
        android:paddingBottom="@dimen/pad_10dp"
        android:paddingTop="@dimen/pad_10dp"
        tools:listitem="@layout/send_item_sent">

    </ListView>

       <Spinner
           android:id="@+id/spinner"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@color/white"
           android:layout_margin="@dimen/pad_5dp"/>

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.55">
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_margin="@dimen/pad_10dp"
         android:background="@color/colorPrimary"
         android:orientation="horizontal">

         <ImageView
             android:id="@+id/image"
             android:layout_width="300dp"
             android:layout_height="match_parent"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:background="@drawable/karamazovkardesler"
             android:clickable="true" />

         <ImageView
             android:id="@+id/imageView3"
             android:layout_width="300dp"
             android:layout_height="match_parent"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="400dp"
             android:background="@drawable/karamazovkardesler"
             android:clickable="true" />

         <ImageView
             android:id="@+id/imageView"
             android:layout_width="300dp"
             android:layout_height="match_parent"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="800dp"
             android:background="@drawable/karamazovkardesler"
             android:clickable="true" />

         <ImageView
             android:id="@+id/imageView2"
             android:layout_width="300dp"
             android:layout_height="match_parent"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="1200dp"
             android:background="@drawable/karamazovkardesler"
             android:clickable="true" />

     </RelativeLayout>
 </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_weight="1.15"
        android:orientation="vertical"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/pad_5dp"
                android:background="@color/white"
                android:text="Secilen"
                android:layout_weight="1"
                android:textColor="@color/colorAccentt"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_margin="@dimen/pad_5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
               android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="SayfaSayısı:"
                android:textSize="@dimen/pad_15dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:textColor="@color/colorAccentt"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="@dimen/pad_5dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:layout_weight="1.333"
                android:background="@color/white"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorAccentt"
                android:textSize="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="Kitap:"
                android:textSize="15dp"
                android:textColor="@color/colorAccentt"
                android:layout_weight="0.975"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_margin="@dimen/pad_5dp"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/colorAccentt"
                android:textSize="8dp" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="Gönder"
                android:textColor="@color/colorAccentt"
                android:layout_weight="1.025"
                android:layout_margin="@dimen/pad_5dp"/>
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>